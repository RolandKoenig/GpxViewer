<firlibMvvm:MvvmWindow 
    x:Class="GpxViewer.Shell.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:prism="http://prismlibrary.com/"
    xmlns:firlibMvvm="http://www.rolandk.de/firlib/patterns/mvvm"
    xmlns:gpxvCore="clr-namespace:GpxViewer.Core;assembly=GpxViewer.Core"
    xmlns:gpxvControls="clr-namespace:GpxViewer.Core.Controls;assembly=GpxViewer.Core"
    xmlns:local="clr-namespace:GpxViewer.Shell.Views"
    mc:Ignorable="d"
    WindowState="Maximized"
    prism:ViewModelLocator.AutoWireViewModel="True"
    d:DataContext="{x:Static local:DesignData.MainWindowVM}"
    Style="{DynamicResource GpxViewerWindowStyle}"
    Title="{Binding Title}" Height="350" Width="525">

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top"
              Style="{StaticResource MainMenuStyle}">
            <MenuItem Header="File">
                <MenuItem Header="Load File"
                          Command="{Binding Path=GpxViewerCommands.LoadFile}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.LoadGpxFile}" />
                <MenuItem Header="Load Directory"
                          Command="{Binding Path=GpxViewerCommands.LoadDirectory}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.LoadDirectory}"/>
                <Separator />

                <MenuItem Header="Save"
                          Command="{Binding Path=GpxViewerCommands.Save}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.Save}"/>
                <MenuItem Header="Save All"
                          Command="{Binding Path=GpxViewerCommands.SaveAll}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.SaveAll}"/>
                <Separator />

                <MenuItem Header="Close" 
                          Command="{Binding Path=GpxViewerCommands.Close}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.Close}"/>
                <MenuItem Header="Close All" 
                          Command="{Binding Path=GpxViewerCommands.CloseAll}"
                          Icon="{x:Static gpxvCore:GpxViewerIconKind.CloseAll}"/>
                <Separator />

                <MenuItem Header="Recently Opened"
                          IsEnabled="{Binding Path=RecentlyOpenedAvailable}"
                          ItemsSource="{Binding Path=RecentlyOpened}">
                    <MenuItem.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:RecentlyOpenedViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <gpxvControls:GpxViewerIcon IconKind="{Binding Path=IconKind, Mode=OneTime}"
                                                            Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Path=ShortPath, Mode=OneTime}" />
                            </StackPanel>
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                            <Setter Property="CommandParameter" Value="{Binding Path=Model, Mode=OneTime}" />
                            <Setter Property="Command" Value="{Binding Path=Command_Load, Mode=OneTime}" />
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                <Separator />

                <MenuItem Header="Exit"
                          Command="{Binding Path=Command_Exit}"/>
            </MenuItem>
            <MenuItem Header="Skin">
                <MenuItem Header="Dark"
                          Command="{Binding Path=Command_SetSkin}"
                          CommandParameter="Dark"/>
                <MenuItem Header="Light"
                          Command="{Binding Path=Command_SetSkin}"
                          CommandParameter="Light"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"
                          Command="{Binding Path=Command_ShowAboutDialog}" />
            </MenuItem>
        </Menu>

        <Grid Style="{StaticResource ShellMainGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding Path=Configuration.LeftBlockWidth, Mode=TwoWay, Converter={StaticResource Converter_DoubleToGridLength}}" 
                                  MinWidth="150" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="3" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" 
                          Header="Files">
                    <ContentControl prism:RegionManager.RegionName="{x:Static gpxvCore:GpxViewerConstants.REGION_FILE_TREE}" />
                </GroupBox>

                <GridSplitter Grid.Row="1"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                <GroupBox Grid.Row="2"
                          Header="Selected Tour">
                    <ContentControl prism:RegionManager.RegionName="{x:Static gpxvCore:GpxViewerConstants.REGION_TOUR_INFO}" />
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            <Grid Grid.Column="2">
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="3" />
                        <RowDefinition Height="{Binding Path=Configuration.BottomBlockHeight, Mode=TwoWay, Converter={StaticResource Converter_DoubleToGridLength}}" 
                                       MinHeight="125" />
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static gpxvCore:GpxViewerConstants.REGION_MAP}" />

                    <GridSplitter Grid.Row="1"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                    <GroupBox Grid.Row="2"
                              Header="Elevation profile">
                        <ContentControl prism:RegionManager.RegionName="{x:Static gpxvCore:GpxViewerConstants.REGION_ELEVATION_PROFILE}" />
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>

</firlibMvvm:MvvmWindow>
