<firlibMvvm:MvvmUserControl
        x:Class="GpxViewer.Modules.GpxFiles.Views.TourViews.SelectedToursViewError"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:firlibMvvm="http://www.rolandk.de/firlib/patterns/mvvm"
        xmlns:local="clr-namespace:GpxViewer.Modules.GpxFiles.Views.TourViews"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        d:DataContext="{x:Static local:DesignData.SelectedToursVM_Error}">
    <Grid>
        <StackPanel Margin="4"
                    Orientation="Vertical"
                    HorizontalAlignment="Left">
            <TextBlock Text="{Binding Path=ErrorTextCompact}"
                       Foreground="Red"
                       FontWeight="Bold" />
            <Button Content="{x:Static local:SelectedToursViewResources.Load_Error_Show_Details}"
                    Command="{Binding Path=Command_ShowErrorDetails}"
                    HorizontalAlignment="Left"
                    Width="150" Margin="0,6,3,3" />
        </StackPanel>
    </Grid>
</firlibMvvm:MvvmUserControl>
